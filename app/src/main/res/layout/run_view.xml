<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dateView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="wrap"/>

    <TextView
        android:id="@+id/dateView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameView"
        app:layout_constraintEnd_toStartOf="@+id/timeView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="wrap"/>

    <TextView
        android:id="@+id/timeView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dateView"
        app:layout_constraintEnd_toStartOf="@+id/distanceView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="wrap"/>

    <TextView
        android:id="@+id/distanceView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="distance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timeView"
        app:layout_constraintEnd_toStartOf="@+id/elevationView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="wrap"/>

    <TextView
        android:id="@+id/elevationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/distanceView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="wrap"/>

</androidx.constraintlayout.widget.ConstraintLayout>
