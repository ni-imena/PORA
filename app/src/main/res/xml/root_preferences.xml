<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings">

        <SwitchPreferenceCompat
            app:key="theme_switch"
            app:title="@string/theme_switch" />


        <ListPreference
            app:key="language_preference"
            app:title="@string/language_preference_title"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:defaultValue="@string/language_default_value"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>